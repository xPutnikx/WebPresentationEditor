<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security-3.1.xsd">
	<http pattern="/spring/login*" security="none"/>
	 <http pattern="/spring/images/**" security="none"/>
           <http pattern="/spring/lib/**" security="none"/>
           <http pattern="/spring/preview_export/**" security="none"/>
           <http pattern="/spring/res/**" security="none"/>
           <http pattern="/spring/resources/**" security="none"/>
  		   <http pattern="/spring/loginform*" security="none"/>
  		   <http pattern="/spring/listofPresentations*" security="none"/>
  		   <http pattern="/spring/scripts/**" security="none"/>
  		   <http pattern="/spring/about*" security="none"/>
  		   <http pattern="/spring/home*" security="none"/>
  		   <http pattern="/spring/contact*" security="none"/>
  		   <http pattern="/spring/registrationform*" security="none"/>
  		   <http pattern="/spring/confirm*" security="none"/>
	<http auto-config="true">
		<intercept-url pattern="/spring/list" access="ROLE_ADMIN" />
		<intercept-url pattern="/spring/edit" access="ROLE_ADMIN" />
  		<intercept-url pattern="/editor.html" access="ROLE_USER,ROLE_ADMIN"/>
  		<intercept-url pattern="/spring/mypresentations" access="ROLE_USER,ROLE_ADMIN"/>
  		<intercept-url pattern="/preview.jsp" access="ROLE_USER,ROLE_ADMIN"/>
  		<intercept-url pattern="/spring/userpage" access="ROLE_USER,ROLE_ADMIN"/>
  		<intercept-url pattern="/spring/changepassword" access="ROLE_USER,ROLE_ADMIN"/>
		<form-login login-page="/spring/loginform" default-target-url="/spring/home"
			authentication-failure-url="/spring/loginform" />
		<logout logout-success-url="/spring/home" />
	</http>

	<authentication-manager>
		<authentication-provider>
		<jdbc-user-service data-source-ref="dataSource"
				
				users-by-username-query="
                              select name,password,enabled 
                              from users where name=?"
				authorities-by-username-query="
                              SELECT u.name, ur.authority FROM webeditor.users u, webeditor.userroles ur 
                              WHERE u.id = ur.userId and u.name=?"/>
		</authentication-provider>
	</authentication-manager>
</beans:beans>